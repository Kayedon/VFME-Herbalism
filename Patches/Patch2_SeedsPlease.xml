<?xml version="1.0" encoding="utf-8" ?>
<Patch> <!-- [Kayedon] - I probably should've done this whole thing as a LoadFolders.xml thing, but... lazy, and this was already mostly done -->
	<Operation Class="PatchOperationFindMod">
		<mods><li>SeedsPlease: Lite</li></mods>
		<match Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[plant/purpose[text()="Beauty"][not(modExtensions)</xpath>
				<value><modExtensions /></value>
			</li>
			<li Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[plant/purpose[text()="Beauty"]/modExtensions</xpath>
				<value>
					<li Class="SeedsPleaseLite.Seedless" />
				</value>
			</li>
		</operations>
		</match>
	</Operation>
</Patch>